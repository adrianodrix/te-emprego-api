{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src"],
      "@app/*": ["src/app.js"],
      "@config/*": ["src/config"],
      "@controller/*": ["src/controller"],      
      "@helper/*": ["src/helper"],      
      "@model/*": ["src/model"],      
      "@service/*": ["src/service"],      
    }
  },
  "exclude": ["node_modules", "dist"]
}